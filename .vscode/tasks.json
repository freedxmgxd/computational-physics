{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current File with Bazel",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "--compilation_mode=dbg",
                "${relativeFileDirname}:${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building the current file with Bazel"
        },
        {
            "label": "Run Current File with Bazel",
            "type": "shell",
            "command": "bazel run",
            "args": [
                "${relativeFileDirname}:${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for running the current file with Bazel"
        }
    ]
}